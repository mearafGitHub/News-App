<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="12dp"
    android:elevation="21dp"
    android:paddingVertical="16dp"
    android:id="@+id/newsItemContainer"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="21dp"
    android:background="@drawable/card_bg"
>
    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/ic_undraw_ask_me_anything_k8o0" />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:paddingVertical="16dp"
        >

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="21dp"
            tools:text="Brexit News"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/newsDetail"
                android:layout_width="match_parent"
                android:defaultFocusHighlightEnabled="true"
                android:layout_marginVertical="9dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                tools:text="This is the brief description about the news. This is the brief description about the news. This is the brief description about the news. " />


        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="9dp"
            >
            <TextView
                android:id="@+id/newsComposerLabel"
                android:layout_width="wrap_content"
                tools:text="Writer:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="9dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/newsComposerName"
                android:layout_width="wrap_content"
                tools:text="Temasgen Bayene"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <TextView
            android:id="@+id/newsDate"
            android:paddingVertical="9dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            tools:text="04/11/2019"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>